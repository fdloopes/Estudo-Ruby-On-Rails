<% @produto.errors.full_messages.each do |message| %>
  <div class="alert alert-danger" role="alert" >
    <%= message %>
  </div>
<% end %>

      <%= form_for @produto do |f| %>
        <div class="form-group">
          <%= f.label :nome %>
          <%= f.text_field :nome, class:"form-control" %><br/>    <!-- campo de texto para o nome -->
        </div>
        <div class="form-group">
          <%= f.label :descricao %>
          <%= f.text_area :descricao, class:"form-control", rows: 4 %><br/>    <!-- campo de texto maior para a descrição -->
        </div>
        <div class="form-inline">
          <div class="form-group">
            <%= f.label :departamento %>
            <%= f.collection_select :departamento_id, @departamentos, :id, :nome, {}, class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :quantidade %>
            <%= f.number_field :quantidade , min: 0 , step: 1 , class:"form-control"%><br/>    <!-- campo numérico para a quantidade -->
          </div>
          <div class="form-group">
            <%= f.label :preco %>
            <%= f.number_field :preco, min: 1 , step: 0.01 , class:"form-control"%><br/>    <!--campo numérico para o preço -->
          </div>
            <%= f.submit texto_da_acao, class:"btn btn-success", style:"margin-top:22px"%>    <!--botão para submeter o novo produto -->
        </div>
      <% end %>
