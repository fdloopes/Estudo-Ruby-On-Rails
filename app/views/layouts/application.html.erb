<!DOCTYPE html>
<html>
  <head>
    <title>Kunstee - Loja de roupas</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Menu -->
    <%= nav_bar brand:'Kunstee', brand_link:root_url, responsive: true do %>
      <%= menu_group class:"form-group" do %>
        <%= menu_item "Adicionar Produto", "/produtos/new" %>
        <%= menu_item "Adicionar Departamento", "/departamentos" %>
      <% end %>
      <%= form_tag busca_produto_path, method: :get, class:"navbar-form navbar-right" do %>
        <div class="form-group">
          <%= text_field_tag :nome, @nome_a_buscar, class:"form-control" %>
          <%= button_to "Buscar", nil, class:"btn btn-default" %>
        </div>
      <% end %>
    <% end %>
    <!-- fim Menu -->
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
